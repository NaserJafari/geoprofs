@page
@model geoprofs.Pages.Verlofs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<style>
    .red-table {
        background-color: #FFCDD2; /* Red color for denial */
        border-bottom: 3px solid #FF0000; /* Red border */
    }

    .green-table {
        background-color: #C8E6C9; /* Green color for approval */
        border-bottom: 3px solid #00FF00; /* Green border */
    }

    /* Added button styling */
    .action-button-container {
        display: flex;
        justify-content: space-between;
    }

    .action-button {
        flex: 1;
        padding: 8px 12px;
        margin: 4px 2px;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
    }

    .approve-button {
        background-color: #4CAF50; /* Green */
        color: white;
        border: none;
        width: 100px;
    }

    .deny-button {
        background-color: #f44336; /* Red */
        color: white;
        border: none;
        width: 100px;
    }
</style>

<script>
    function denyClicked(rowId, event) {
        event.preventDefault();
        var row = document.getElementById('row-' + rowId);
        row.classList.add('red-table');
        row.classList.remove('green-table');
    }

    function approveClicked(rowId, event) {
        event.preventDefault();
        var row = document.getElementById('row-' + rowId);
        row.classList.add('green-table');
        row.classList.remove('red-table');
    }
</script>

<table class="table" id="verlofTable">
    <thead>
        <tr>
            <th>
                Verlof Reden
            </th>
            <th>
                Verlof Omschrijving
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Begin Verlof
            </th>
            <th>
                Eind Verlof
            </th>
            <th>
                Verlof Resterend
            </th>
            <th>
                Rol
            </th>
            <th>
                Verlof Status
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Verlof)
        {
            <tr id="row-@item.VerlofId">
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofReden)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofOmschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeginVerlof)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EindVerlof)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofResterend)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofStatus)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.VerlofId">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.VerlofId">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.VerlofId">Delete</a>
                    <br>
                    <button class="action-button approve-button" onclick="approveClicked('@item.VerlofId', event)">Approve</button>
                    <button class="action-button deny-button" onclick="denyClicked('@item.VerlofId', event)">Deny</button>
                </td>
            </tr>
        }
    </tbody>
</table>

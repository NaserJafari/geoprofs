@page
@model geoprofs.Pages.Verlofs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<style>
    .red-table {
        background-color: #FFCDD2; /* Red color for denial */
    }

    .green-table {
        background-color: #C8E6C9; /* Green color for approval */
    }
</style>

<script>
    function denyClicked(rowId, event) {
        event.preventDefault();
        var row = document.getElementById('row-' + rowId);
        row.classList.add('red-table');
        row.classList.remove('green-table');
    }

    function approveClicked(rowId, event) {
        event.preventDefault();
        var row = document.getElementById('row-' + rowId);
        row.classList.add('green-table');
        row.classList.remove('red-table');
    }
</script>

<table class="table" id="verlofTable">
    <thead>
        <tr>
            <th>
                Verlof Reden
            </th>
            <th>
                Verlof Omschrijving
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Begin Verlof
            </th>
            <th>
                Eind Verlof
            </th>
            <th>
                Verlof Resterend
            </th>
            <th>
                Rol
            </th>
            <th>
                Verlof Status
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Verlof)
        {
            <tr id="row-@item.VerlofId">
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofReden)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofOmschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeginVerlof)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EindVerlof)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofResterend)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerlofStatus)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.VerlofId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.VerlofId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.VerlofId">Delete</a> |
                    <a href="#" onclick="approveClicked('@item.VerlofId', event)">Approve</a> |
                    <a href="#" onclick="denyClicked('@item.VerlofId', event)">Deny</a>
                </td>
            </tr>
        }
    </tbody>
</table>
